    script.
      (function ($) {
        $(document).ready(function () {
          var $body = $('html, body');
          $mainMenu = $('.menu');

          $mainMenu.on('click', 'a', function(e) {
            e.preventDefault();
            var targetID = $(this).attr('href'),
                offset = 50;

            $body.animate({
              scrollTop:$(targetID).offset().top - offset
            }, 1000);
          });
        });

        $(window).load(function () {

          $('#headerSlider').coreSlider({
            interval: 4000,
            navEnabled: false
          });

          $('#example1').coreSlider({
            pauseOnHover: false,
            interval: 3000,
            controlNavEnabled: true
          });

          $('#example2').coreSlider({
            interval: 3000,
            items: 2
          });

          $('#example3').coreSlider({
            interval: 3000,
            clone: true,
            cloneItems: 3,
            controlNavEnabled: true
          });
        });
      })(jQuery);

